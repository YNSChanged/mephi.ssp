extends layout

block content
    .clearfix
    .content
        .sport-your
            link(href='stylesheets/owl.carousel.css', rel='stylesheet')
            script(src='javascripts/owl.carousel.js')
            script.
                $(document).ready(function() {
                    $("#owl-demo").owlCarousel({
                        items : 5,
                        lazyLoad : true,
                        autoPlay : true,
                        navigation : true,
                        navigationText :  true,
                        pagination : false,
                    });
                });
            #example1
                #owl-demo.owl-carousel.text-center
                    mixin roll(href, title, pic)
                        .item
                            a(href=href, title=title)
                                img.img-responsive(src=pic)
                                .run
                                    p=title
                    //6+ штук
            h6.your-in ТОВАРЫ
            .line2
        .content-grids
            mixin product(prod)
                .col-md-4.content-grid
                    a.lot(href=prod.href)
                        img.img-responsive(src=prod.pic, alt='')
                    .shoe
                        p
                            | #{prod.name}
                            | #{prod.color}
                        label=prod.price
                    .clearfix
            for prod in topProdList
                +product(prod)
